install_dir='/usr/local/share/redmine'

# shellcheck disable=SC2015
test -d "${install_dir:?}" && test -f "${install_dir:?}/.cdist__unpack_sum" || {
	# absent
	exit 0
}

sed -e 's/^\([0-9]\{10\}\)\(.*\)/\1 \2/' "${install_dir:?}/.cdist__unpack_sum"
